<div class="fixed inset-0 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg shadow-lg p-6">
    <h1 class="text-2xl font-bold mb-4">Editing room</h1>
    <%= turbo_frame_tag "room" do %>
      <%= render "form", room: @room %>
    <% end %>

    <div class="mt-6 text-right">
      <%= link_to "Show this room", @room, class: "text-blue-500 hover:text-blue-600 underline mr-4" %>
      <%= link_to "Back to rooms", rooms_path, class: "text-blue-500 hover:text-blue-600 underline" %>
    </div>
  </div>
</div>
