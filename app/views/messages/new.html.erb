<h1 class="text-2xl font-bold mb-4">New Message</h1>
<%= turbo_frame_tag "new_message", target:"_top" do%>
    <%= form_with(model: [@message.room, @message], data:{controller:"reset_form", action:"turbo:submit-end->reset_form#reset"}) do |form| %>
    <div class="mb-4">
        <%= form.label :content, class: "block font-medium mb-1" %>
        <%= form.text_field :content, class: "w-full p-2 border border-gray-300 rounded-md" %>
    </div>
    
    <%= form.submit "Send", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md" %>
    <% end %>
<% end %>

<%= link_to "Back", @message.room, class: "text-blue-500 hover:text-blue-600 underline mt-4" %>
